    <script src="/public/assets/js/theme.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (message !== null) { %>
    <script type="text/javascript">
        swal.fire({
            title: '<%= message.title %>',
            text: '<%= message.text %>',
            icon: '<%= message.type %>',
            showConfirmButton: true,
            timer: 6000
        })
    </script>
    <% } %>
</body>

