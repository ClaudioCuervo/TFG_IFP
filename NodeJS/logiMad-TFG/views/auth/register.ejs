<body>
    <div id="nav-bar" class="nav-bar-main-block" style="background-color: #00656D;">
        <div class="sticky-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-12">
                        <div class="logo">
                            <a href="/" title="logo">
                                <img src="/public/assets/images/logiMad-png.png" alt="logo" width="200">
                            </a>
                        </div>
                        <div class="responsive-menu-wrap"></div>
                    </div>
                    <div class="col-lg-7">
                        <div class="navigation text-white theme-2">
                            <div id="cssmenu">
                                <ul>
                                    <li class=""><a href="/" title="Inicio">Inicio</a></li>
                                    <li class=""><a href="/track" title="Seguimiento">Seguimiento</a></li>
                                    <li class=""><a href="/faq" title="FAQs">FAQS</a></li>
                                    <li class=""><a href="/contact" title="Contacto">Contacto</a></li>
                                    <li class=""><a href="/about" title="Sobre Nosotros">Nosotros</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="navigation-btn">
                            <a href="/auth/login" class="btn btn-primary active" title="Iniciar sesión">Acceder</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="quotation" class="quotation-main-block"
        style="background-image: url('/public/assets/images/bg/best-bg.jpg');">
        <div class="container">
            <div class="section text-center">
                <br>
                <h1 class="section-heading">Regístrate</h1>
            </div>
            <div class="quotation-block mt-5">
                <form class="quotation-form" method="post" action="/auth/register">
                    <div class="row">
                        <div class="col-lg-4 col-sm-6">
                            <div class="form-group"><label for="name">Nombre</label>
                            <input name="name" type="text" class="form-control" id="name" placeholder="Nombre" required=""></div>
                        </div>
                        <div class="col-lg-4 col-sm-6">
                            <div class="form-group">
                                <label for="surname">Apellido</label>
                                <input name="surname" type="surname" class="form-control" id="surname" placeholder="Apellido" required="">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6">
                            <div class="form-group">
                                <label for="phone">Móvil</label>
                                <input name="phone" type="phone" class="form-control" id="phone" placeholder="Número de teléfono" required="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-6">
                            <div class="form-group">
                                <label for="email">Correo</label>
                                <input name="email" type="email" class="form-control" id="email" placeholder="Correo electrónico" required="">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6">
                            <div class="form-group">
                                <label for="password">Contraseña</label>
                                <input name="password" type="password" class="form-control" id="password" placeholder="Contraseña" required="">
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="request-button">
                                <button type="submit" class="btn btn-primary">Regístrarme<i class="las la-arrow-right"></i></button>
                            </div>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
    <footer id="footer" class="footer-main-block">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="copyright-block">
                        <p>&copy; 2022 <a href="/" title="LogiMad">LogiMad</a>. Todos los
                            derechos <a href="#" title="">reservados</a>.</p>
                    </div>
                </div>
